{
  "name": "async-compat",
  "version": "1.4.7",
  "description": "Compatibility functions for writing libraries that support synchronous, callback and promise signatures",
  "keywords": [
    "async",
    "compatibilty",
    "library",
    "callback",
    "promise"
  ],
  "homepage": "https://github.com/kmalakoff/async-compat",
  "repository": {
    "type": "git",
    "url": "git@github.com:kmalakoff/async-compat.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "main": "dist/cjs/index.cjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "deploy": "tsds deploy",
    "format": "biome check --write --unsafe src/ test/",
    "test": "ts-swc mocha-compat test/spec/**/*.test.js --no-timeouts",
    "test:engines": "nvu engines npm test",
    "version": "tsds version"
  },
  "dependencies": {
    "is-error": "^2.2.2",
    "is-promise": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.3",
    "mocha-compat": "^3.6.2",
    "pinkie-promise": "^2.0.1",
    "ts-swc-loaders": "^1.8.10"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.mjs",
    "targets": [
      "cjs"
    ]
  }
}
